{
  "$schema": "../gen/schemas/capabilities.json",
  "identifier": "main-capability",
  "description": "Main application capabilities",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "shell:allow-open",
    "shell:allow-execute",
    "shell:allow-spawn",
    "fs:allow-read-text-file",
    "fs:allow-write-text-file",
    "fs:allow-read-dir",
    "fs:allow-mkdir",
    "fs:scope-appconfig",
    "fs:scope-appdata",
    "fs:scope-applocaldata",
    "fs:scope-applog"
  ],
  "scope": {
    "shell": {
      "execute": [
        {
          "name": "cmd",
          "cmd": "cmd",
          "args": true
        },
        {
          "name": "npx",
          "cmd": "npx",
          "args": true
        },
        {
          "name": "powershell",
          "cmd": "powershell",
          "args": true
        }
      ]
    }
  }
}
